
@{
    ViewBag.Title = "UpdateProduct";
}




<html>
<body>
    <header class="nk-header nk-header-opaque">
        <nav class="nk-navbar nk-navbar-top nk-navbar-sticky nk-navbar-autohide">
            <div class="container">
                <div class="nk-nav-table">

                    <a href="~/Home/Index" class="nk-nav-logo">
                        <img src="~/Content//images/logo.png" width="210" />
                    </a>

                    <ul class="nk-nav nk-nav-right d-none d-lg-table-cell" data-nav-mobile="#nk-nav-mobile">
                        <li class=" nk-drop-item">
                            <a href="~/Home/Index">
                                Home

                            </a><ul class="dropdown">

                                <li>
                                    @Html.ActionLink("Product Entry", "ProductEntry", "Home")
                                </li>
                                
                                <li>
                                    @Html.ActionLink("User Entry", "UserEntry", "Home")
                                </li>



                            </ul>
                        </li>
                        <li>
                            @Html.ActionLink("Shopping Cart", "Cart", "Home")
                        </li>
                        <li>
                            @Html.ActionLink("Log out", "Login", "Home")
                        </li>
                    </ul>
                    <ul class="nk-nav nk-nav-right nk-nav-icons">

                        <li class="single-icon d-lg-none">
                            <a href="#" class="no-link-effect" data-nav-toggle="#nk-nav-mobile">
                                <span class="nk-icon-burger">
                                    <span class="nk-t-1"></span>
                                    <span class="nk-t-2"></span>
                                    <span class="nk-t-3"></span>
                                </span>
                            </a>
                        </li>


                    </ul>
                </div>
            </div>
        </nav>
        <!-- END: Navbar -->


    </header>
    <div class="nk-gap"></div>
    <div class="container">
        <h3 class="nk-decorated-h-3"><span>Update Product</span></h3>
        <div class="nk-gap"></div>

        <label>Enter Product Item Code</label>
        <div class="nk-gap"></div>
        <input type="text" id="itmcode" name="itmcode" class="form-control required" style="width: 300px;" />&nbsp;&nbsp;
        <div class="nk-gap"></div>
        <input type="button" id="btnSearch" name="btnSearch" value="Search" class="nk-btn nk-btn-rounded nk-btn-color-main-1" />

        <div class="nk-gap"></div>
        <label>Enter Updated Product Description</label>
        <div class="nk-gap"></div>
        <textarea class="form-control required" id="itmdesc" name="itmdesc" rows="5"></textarea>
        <div class="nk-gap"></div>

        <label>Enter New Product Price</label>
        <div class="nk-gap"></div>
        <input type="number" id="itmprice" name="itmprice" min="1" max="10000.00" step=".01" class="form-control required" oninput="validity.valid||(value='')" style="width: 300px;" /><br /><br />
        <div class="nk-gap"></div>
        <label>Enter New Stocks</label>
        <div class="nk-gap"></div>
        <input type="number" id="itmqtyonhand" name="itmqtyonhand" min="1" max="1000" class="form-control required" oninput="validity.valid||(value='')" style="width: 300px;" /><br /><br />
        <div class="nk-gap"></div>

        <input type="button" id="btnEdit" name="btnEdit" value="Edit" class="nk-btn nk-btn-rounded nk-btn-color-main-1" />
        <div class="nk-gap"></div>
        <input type="button" id="btnUpdate" name="btnUpdate" value="Update" class="nk-btn nk-btn-sm nk-btn-rounded nk-btn-color-white" />


    </div>

        <img class="nk-page-background-top" src="~/Content//images/bg-top.png" alt="">
        <img class="nk-page-background-bottom" src="~/Content//images/bg-bottom.png" alt="">

        <script type="text/javascript" src="~/Scripts/jquery/jquery-3.6.0.min.js"></script>
        <script type="text/javascript" src="~/Scripts/jquery/updateItem.js"></script>
        <script type="text/javascript" src="~/Scripts/jquery/myscript.js?data=@DateTime.Now.ToString("mmss")"></script>

</body>

 </html>