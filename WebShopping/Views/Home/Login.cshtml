
@{
    ViewBag.Title = "Login";
}



<html>
<body>
    <header class="nk-header nk-header-opaque">
        <nav class="nk-navbar nk-navbar-top nk-navbar-sticky nk-navbar-autohide">
            <div class="container">
                <div class="nk-nav-table">

                    <a href="~/Home/Index" class="nk-nav-logo">
                        <img src="~/Content//images/logo.png" width="210" />
                    </a>

                    <ul class="nk-nav nk-nav-right d-none d-lg-table-cell" data-nav-mobile="#nk-nav-mobile">

                        <li>
                            @Html.ActionLink("Home", "Index", "Home")
                        </li>
                        <li>
                            @Html.ActionLink("Shopping Cart", "Login", "Home")
                        </li>
                        
                    </ul>
                    <ul class="nk-nav nk-nav-right nk-nav-icons">

                        <li class="single-icon d-lg-none">
                            <a href="#" class="no-link-effect" data-nav-toggle="#nk-nav-mobile">
                                <span class="nk-icon-burger">
                                    <span class="nk-t-1"></span>
                                    <span class="nk-t-2"></span>
                                    <span class="nk-t-3"></span>
                                </span>
                            </a>
                        </li>


                    </ul>
                </div>
            </div>
        </nav>
        <!-- END: Navbar -->

    </header>
    <div class="nk-gap"></div>
    <div class="nk-gap"></div>
    <div class="container">
        <div class="nk-gap-2"></div>
        <h3 class="nk-decorated-h-3"><span>Login</span></h3>
        <div class="nk-gap"></div>
        <label>Username</label>
        <div class="nk-gap"></div>
        <input type="text" id="usr" name="usr" class="form-control required" style="width: 300px;"/><br /><br />
        <label>Password</label>
        <div class="nk-gap"></div>
        <input type="password" id="pwd" name="pwd" class="form-control required" style="width: 300px;"/><br /><br />
        <input type="button" class="nk-btn nk-btn-lg nk-btn-rounded nk-btn-color-white" id="btnlogin" name="btnlogin" value="Login" />
    </div>

    <img class="nk-page-background-top" src="~/Content//images/bg-top.png" alt="">
    <img class="nk-page-background-bottom" src="~/Content//images/bg-bottom.png" alt="">
    <script type="text/javascript" src="~/Scripts/jquery/jquery-3.6.0.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery/login.js"></script>

</body>
</html>                                                                      